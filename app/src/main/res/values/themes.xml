<resources xmlns:tools="http://schemas.android.com/tools">
    <!--  Base application theme.  -->
    <style name="Theme.Satishop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--  Primary brand color.  -->
        <item name="colorPrimary">@color/light_blue_200</item>
        <item name="colorPrimaryVariant">@color/light_blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--  Secondary brand color.
                <item name="colorSecondary">@color/teal_200</item>
                <item name="colorSecondaryVariant">@color/teal_700</item>
                <item name="colorOnSecondary">@color/black</item>
                  -->
        <!--  Color of elements  -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:buttonTint">?attr/colorPrimary</item>
        <!--  Customize your theme here.  -->
    </style>
    <style name="Theme.Satishop.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Satishop.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Satishop.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>