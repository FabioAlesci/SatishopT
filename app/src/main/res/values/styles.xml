<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="font_size_normal">14sp</dimen>
    <dimen name="font_size_small">12sp</dimen>
    <dimen name="font_size_extra_small">10sp</dimen>
    <dimen name="font_size_large">16sp</dimen>
    <dimen name="font_size_extra_large">18sp</dimen>

    <!-- titles -->
    <style name="h1">
        <item name="android:textSize">@dimen/font_size_extra_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h2">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <style name="tiny_text">
        <item name="android:textSize">@dimen/font_size_extra_small</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="body">
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="body_bold">
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- layout styles -->
    <style name="post_style">
        <item name="android:padding">8dp</item>
        <item name="android:colorBackground">@color/light_grey_200</item>
    </style>
</resources>